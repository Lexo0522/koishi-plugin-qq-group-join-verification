{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}